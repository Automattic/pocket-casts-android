    <style name="P60" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?attr/secondary_text_01</item>
    </style>

    <style name="PCOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@color/transparent</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/primary_interactive_01</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PCAccountOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">8dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/primary_text_01</item>
        <item name="android:textAppearance">@style/H40</item>
    </style>

    <style name="PCButton" parent="Widget.MaterialComponents.Button">
        <item name="background">?attr/primary_interactive_01</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/primary_interactive_02</item>
        <item name="android:textSize">18sp</item>
        <item name="android:drawableTint">?attr/primary_interactive_02</item>
    </style>

    <style name="ShapeAppearancePill">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextAppearanceCarHint">
        <item name="android:textSize">20sp</item>
    </style>
</resources>
