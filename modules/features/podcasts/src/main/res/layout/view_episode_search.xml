<merge xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    tools:parentTag="android.widget.FrameLayout">

    <EditText
        android:id="@+id/searchText"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/edit_text_background_round"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="10dp"
        android:drawableTint="?attr/primary_icon_02"
        android:hint="@string/podcast_search_episodes"
        android:imeOptions="flagNoExtractUi|flagNoFullscreen|actionSearch"
        android:importantForAutofill="no"
        android:inputType="text"
        android:letterSpacing="0.025"
        android:maxLines="1"
        android:paddingStart="14dp"
        android:textAppearance="?attr/textBody2"
        android:textColor="?attr/primary_text_02"
        android:textColorHint="?attr/primary_text_02"
        android:textSize="14sp" />

    <ProgressBar
        android:id="@+id/loadingSearchView"
        style="@android:style/Widget.Material.ProgressBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="40dp"
        android:visibility="gone"
        android:indeterminateTint="?attr/primary_icon_01" />

    <ImageButton
        android:id="@+id/cancelSearchBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_cancel"
        android:background="@color/transparent"
        android:layout_marginEnd="8dp"
        android:visibility="gone"
        android:layout_gravity="end|center_vertical"
        app:tint="?attr/primary_icon_02" />

</merge>