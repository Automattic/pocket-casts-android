<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">
    <!-- Using a text view instead of a button because of the gradient background -->
    <TextView
        android:id="@+id/btnUpgrade"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/background_plus_gradient_rounded"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/profile_upgrade_to_plus"
        android:gravity="center"
        style="@style/H30"
        android:textColor="?attr/primary_interactive_02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/lblSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/H40"
        android:textColor="?attr/secondary_text_02"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btnUpgrade"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>