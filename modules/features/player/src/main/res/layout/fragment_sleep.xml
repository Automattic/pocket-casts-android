                app:layout_constraintEnd_toStartOf="@+id/incEpisodeButton"
                app:layout_constraintTop_toTopOf="@+id/labelAfterNEpisodes" />

            <ImageView
                android:id="@+id/incEpisodeButton"
                android:layout_width="44dp"
